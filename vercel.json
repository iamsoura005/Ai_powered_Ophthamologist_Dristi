{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.py"
    }
  ],
  "env": {
    "TF_CPP_MIN_LOG_LEVEL": "2",
    "PYTHONPATH": "$PYTHONPATH:./backend",
    "MODEL_URL": "https://github.com/iamsoura005/Dristi_Ai/releases/download/v1.0.0/eye_disease_model.h5"
  },
  "functions": {
    "api/index.py": {
      "maxDuration": 60,
      "memory": 2048
    }
  },
  "regions": ["iad1"],
  "outputDirectory": "frontend/.next"
}