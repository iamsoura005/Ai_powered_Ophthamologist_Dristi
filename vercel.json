{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "TF_CPP_MIN_LOG_LEVEL": "2",
    "PYTHONPATH": "$PYTHONPATH:./backend",
    "MODEL_URL": "https://huggingface.co/your-username/hackloop-eye-disease-model/resolve/main/eye_disease_model.h5"
  },
  "functions": {
    "api/index.py": {
      "maxDuration": 60,
      "memory": 3008
    }
  },
  "regions": ["iad1"],
  "outputDirectory": "frontend/.next"
}