{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.py"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/$1"
    }
  ],
  "env": {
    "TF_CPP_MIN_LOG_LEVEL": "2",
    "PYTHONPATH": "/var/task:/var/task/backend",
    "MODEL_URL": "https://github.com/iamsoura005/Dristi_Ai/releases/download/v1.0.0/eye_disease_model.h5",
    "FLASK_ENV": "production"
  },
  "functions": {
    "api/index.py": {
      "maxDuration": 60,
      "memory": 3008,
      "runtime": "python3.9"
    }
  },
  "regions": ["iad1"],
  "installCommand": "cd frontend && npm install",
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/.next",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD frontend/ api/"
}